<h2>My Cart</h2>

<div>
  <% @line_items.each do |line_item| %>
     <div class="row">
       <hr>
      <%= image_tag line_item.product.image.url, class: "pics pull-right"  %>
      <h3><%= line_item.product.name %></h3>
      <p>Price: <%= number_to_currency line_item.product.price %></p>
      <p>Qty: <%= line_item.quantity %></p>
      <p>Subtotal: <%= number_to_currency line_item.line_item_total %></p>
    </div>
  <% end %>
</div>
<br>
<div>
  <%= link_to "Proceed to Checkout?", checkout_path, class: "btn btn-success" %>
</div>
